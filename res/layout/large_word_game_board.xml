<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Assignment5.WordGameActivity">

   <ListView
       android:id="@+id/wordGamelistView"
       android:layout_width="match_parent"
       android:layout_weight="2"
       android:layout_height="0sp"
       android:scrollbars="vertical"
       android:scrollIndicators="right"
       android:stackFromBottom="true"
       android:drawSelectorOnTop="false"
       android:fastScrollEnabled="false">
   </ListView>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_weight="3"
       android:layout_height="0dp"
       android:orientation="horizontal">

      <TextView
          android:layout_width="0sp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:gravity="center"
          android:id="@+id/timer"
          android:textColor="#FFFFFF"
          android:textSize="32sp"
          android:background="#000000"
          tools:context=".Assignment5.WordGameActivity"/>
          android:clickable="true" />
      <TextView
          android:layout_width="0sp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:gravity="center"
          android:id="@+id/phase"
          android:textColor="#FFFFFF"
          android:textSize="18sp"
          android:background="#8a77a7"
          tools:context=".Assignment5.WordGameActivity"/>
      android:clickable="true" />
      <TextView
          android:layout_width="0sp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:gravity="center"
          android:id="@+id/score"
          android:textColor="#FFFFFF"
          android:textSize="20sp"
          android:background="#000000"
          tools:context=".Assignment5.WordGameActivity"/>
      android:clickable="true" />
   </LinearLayout>

   <GridLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:gravity="center"

       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       tools:context=".Assignment5.WordGameActivity"
       android:paddingLeft="20dp">

      <include android:id="@+id/large1_word_game" layout="@layout/small_word_game_board"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_margin="@dimen/small_board_margin"
          android:layout_column="0" android:layout_row="0"/>
      <include android:id="@+id/large2_word_game" layout="@layout/small_word_game_board"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_margin="@dimen/small_board_margin"
          android:layout_column="1" android:layout_row="0"/>
      <include android:id="@+id/large3_word_game" layout="@layout/small_word_game_board"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_margin="@dimen/small_board_margin"
          android:layout_column="2" android:layout_row="0"/>
      <include android:id="@+id/large4_word_game" layout="@layout/small_word_game_board"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_margin="@dimen/small_board_margin"
          android:layout_column="0" android:layout_row="1"/>
      <include android:id="@+id/large5_word_game" layout="@layout/small_word_game_board"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_margin="@dimen/small_board_margin"
          android:layout_column="1" android:layout_row="1"/>
      <include android:id="@+id/large6_word_game" layout="@layout/small_word_game_board"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_margin="@dimen/small_board_margin"
          android:layout_column="2" android:layout_row="1"/>
      <include android:id="@+id/large7_word_game" layout="@layout/small_word_game_board"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_margin="@dimen/small_board_margin"
          android:layout_column="0" android:layout_row="2"/>
      <include android:id="@+id/large8_word_game" layout="@layout/small_word_game_board"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_margin="@dimen/small_board_margin"
          android:layout_column="1" android:layout_row="2"/>
      <include android:id="@+id/large9_word_game" layout="@layout/small_word_game_board"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:layout_margin="@dimen/small_board_margin"
          android:layout_column="2" android:layout_row="2"/>
   </GridLayout>


</LinearLayout>
