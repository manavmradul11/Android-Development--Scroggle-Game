<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
   android:gravity="center"
   android:background="@drawable/menu_background"
   android:elevation="@dimen/elevation_high"
   android:orientation="vertical"
   android:padding="@dimen/menu_padding"
   tools:context=".Assignment7.Communication">

   <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/menu_space"
      android:gravity="center"
      android:text="@string/long_word_game_app_name"
      android:textAppearance="?android:textAppearanceLarge"
      android:textSize="@dimen/menu_text_size"/>

   <Button
      android:id="@+id/two_p_word_game_continue_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/menu_button_margin"
      android:padding="@dimen/menu_button_padding"
      android:text="Resume Single Player"/>

   <Button
      android:id="@+id/two_p_word_game_new_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_margin="@dimen/menu_button_margin"
      android:padding="@dimen/menu_button_padding"
      android:text="New Single Player"/>

   <Button
       android:id="@+id/two_p_word_game_new_multiplayer_button"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_margin="@dimen/menu_button_margin"
       android:padding="@dimen/menu_button_padding"
       android:text="Multi-player"/>

   <Button
      android:id="@+id/two_p_word_game_about_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_margin="@dimen/menu_button_margin"
      android:padding="@dimen/menu_button_padding"
      android:text="About test code"/>

   <Button
       android:id="@+id/two_p_word_game_acknowledgement_button"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_margin="@dimen/menu_button_margin"
       android:padding="@dimen/menu_button_padding"
       android:text="@string/ack_label"/>
</LinearLayout>
